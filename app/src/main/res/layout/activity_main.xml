<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/sunset"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        app:cardElevation="50dp">

        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="369dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/sky"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/karakter"
                android:layout_width="145dp"
                android:layout_height="99dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/karakter" />


            <TextView
                android:layout_width="301dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:layout_marginStart="25dp"
                android:layout_marginTop="00dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="1dp"
                android:text="GANDER CLASSIFICATION"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold|normal" />

            <TextView
                android:layout_width="319dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_marginStart="1dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:text="Aplikasi gander classification ini memudahkan untuk mengenali ciri-ciri antara laki-laki dan perempuan "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnPindah"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:backgroundTint="@color/sunset"
                android:text="Masuk Aplikasi"
                android:textColor="@color/white"
                android:textSize="15sp"
                app:cornerRadius="20dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>